<?xml version="1.0" encoding="UTF-8"?>
<save_name_dialog>
    <div 
        id="header" 
        x="25%" y="15%" 
        width="50%" height="75%"
        background="0.447, 0.522, 0.580, 0.9" 
        border="2.0" 
        borderColor="1.0,1.0,1.0,1.0"
    >
        <label 
            id="saveNameLb" 
            x="10%" y="10.0%" 
            scale="1.0" 
            color="0.294, 0.341, 0.380"
            fontFamily="comic_sans"
            textShadow="2,2 0 0.0,0.0,0.0,0.7"
        >
            Enter Save Name...
        </label>
        
        <input
            id="nameDisplay" 
            x="12%" y="31%" 
            scale="1.0" 
            width="20%" height="7%"
            color="0.0,0.0,0.0, 0.2"
            activeColor="0.0,0.0,0.0, 0.8" 
            placeholder="Type world name..."
            maxLength="30"
            enabled="true"
            fontFamily="comic_sans_small_2"
        >
        </input>
        <div 
            id="nameDisplayBg" 
            x="10%" y="30.0%" 
            width="30%" height="7%"
            background="0.914, 0.929, 0.941, 0.95" 
            border="2.0" 
            hoverable="true"
            hoverColor="0.710, 0.722, 0.729, 0.95"
            borderColor="1.0,1.0,1.0,1.0"
        >
        </div>
        
        <button
            id="confirmBtn" 
            x="10%" y="55%" 
            scale="1.0" 
            color="0.314, 0.949, 0.439" 
            action="confirm"
            hoverable="true"
            hoverColor="0.827, 0.890, 0.839"
            textShadow="2,2 0 0.0,0.0,0.0,0.5"
            fontFamily="comic_sans"
        >
            Confirm
        </button>
        <button 
            id="cancelBtn" 
            x="30%" y="55%" 
            scale="1.0" 
            color="0.890, 0.196, 0.290" 
            action="cancel"
            hoverable="true"
            hoverColor="0.820, 0.647, 0.671"
            textShadow="2,2 0 0.0,0.0,0.0,0.5"
            fontFamily="comic_sans"
        >
            Cancel
        </button>
    </div>
</save_name_dialog>
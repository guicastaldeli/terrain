<?xml version="1.0" encoding="UTF-8"?>
<save_name_dialog>
    <container id="dialog_background" x="25%" y="30%" width="50%" height="40%">
        <label 
            id="title" 
            x="50%" y="10%" 
            scale="1.2" 
            color="1.0,1.0,0.0"
            align="center"
        >
            Enter Save Name
        </label>
        
        <label 
            id="name_display" 
            x="50%" y="30%" 
            scale="1.0" 
            color="1.0,1.0,1.0"
            align="center"
        >
            Enter save name...
        </label>
        <button 
            id="confirm_btn" 
            x="30%" y="60%" 
            scale="1.0" 
            color="0.2,0.8,0.2" 
            action="confirm"
        >
            Confirm
        </button>
        <button 
            id="cancel_btn" 
            x="50%" y="60%" 
            scale="1.0" 
            color="0.8,0.2,0.2" 
            action="cancel"
        >
            Cancel
        </button>
    </container>
</save_name_dialog>
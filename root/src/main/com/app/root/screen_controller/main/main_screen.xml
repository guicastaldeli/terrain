<?xml version="1.0" encoding="UTF-8"?>
<main_screen>
    <label 
        id="title" 
        x="50" y="100" 
        scale="1.0" 
        color="12.0,3.0,0.0"
    >
        Terrain  Beta
    </label>

    <button 
        id="continueBtn" 
        x="50" y="200" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="continue"
    >
        Continue
    </button>
    <button 
        id="startBtn" 
        x="50" y="280" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="start"
    >
        Start
    </button>
    <button 
        id="loadBtn" 
        x="50" y="360" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="load"
    >
        Load
    </button>
    <button 
        id="settingsBtn" 
        x="50" y="450" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="settings"
    >
        Settings
    </button>
    <button 
        id="exitBtn" 
        x="50" y="540" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="exit"
    >
        Exit
    </button>

    <!-- Testing select element -->
    <select 
        id="difficultySelect" 
        x="400" y="200" 
        scale="1.0" 
        color="0.8,0.8,0.8"
        options="Easy,Medium,Hard"
        default="Medium"
        enabled="true"
    >
        Select Difficulty
    </select>

    <!-- Testing range element -->
    <range 
        id="volumeSlider" 
        x="400" y="280" 
        scale="1.0" 
        color="0.5,0.7,1.0"
        min="0" 
        max="100" 
        step="10"
        value="50"
        enabled="true"
    >
        Volume Control
    </range>

    <!-- Testing input element (already supported in parser) -->
    <input 
        id="usernameInput" 
        x="400" y="360" 
        scale="1.0" 
        color="1.0,1.0,1.0"
        placeholder="Enter username"
        maxLength="20"
        enabled="true"
    >
    </input>
</main_screen>
<?xml version="1.0" encoding="UTF-8"?>
<save_name_dialog>
    <label 
        id="saveNameLb" 
        x="35%" y="100" 
        scale="1.0" 
        color="12.0,3.0,0.0"
    >
        Enter Save Name...
    </label>
    
    <input
        id="nameInput" 
        x="40%" y="35%" 
        scale="1.0" 
        color="1.0,1.0,1.0" 
        action="name"
    >
        Enter name
    </input>
    <button
        id="confirmBtn" 
        x="35%" y="60%" 
        scale="1.0" 
        color="0.2,0.8,0.2" 
        action="confirm"
    >
        Confirm
    </button>
    <button 
        id="cancelBtn" 
        x="50%" y="60%" 
        scale="1.0" 
        color="0.8,0.2,0.2" 
        action="cancel"
    >
        Cancel
    </button>
</save_name_dialog>